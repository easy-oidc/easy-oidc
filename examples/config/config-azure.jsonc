{
  // Azure Key Vault configuration example
  "issuer_url": "https://auth.example.com",
  "http_listen_addr": "127.0.0.1:8080",
  "data_dir": "/var/lib/easy-oidc",
  
  // Signing key ID
  
  // Secrets configuration for Azure Key Vault
  "secrets": {
    "provider": "azure",
    "signing_key_name": "easy-oidc-signing-key",
    "connector_secret_name": "easy-oidc-connector-secret",
    "azure_keyvault_url": "https://my-vault.vault.azure.net/"
  },
  
  // Upstream connector
  "connector": {
    "type": "google",
    "client_id": "123456789.apps.googleusercontent.com",
    "redirect_url": "https://auth.example.com/callback/google",
    "scopes": ["openid", "email", "profile"],
    
    // Optional: restrict to specific Google Workspace domain
    "google": {
      "hd": "example.com"
    }
  },
  
  // Default redirect URIs
  "default_redirect_uris": ["http://localhost:8000"],
  
  // Groups overrides (email â†’ groups mappings)
  "groups_overrides": {
    "prod-groups": {
      "alice@example.com": ["prod-admins", "devs"],
      "bob@example.com": ["prod-readonly"]
    }
  },
  
  // OIDC clients
  "clients": {
    "kubelogin-prod": {
      "redirect_uris": ["http://localhost:8000"],
      "groups_override": "prod-groups"
    }
  }
  
  // Optional: Token TTL in seconds (default: 3600 = 1 hour)
  // "token_ttl_seconds": 3600,
}
